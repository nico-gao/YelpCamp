<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="camp[title]" value="<%= camp.title %>" required> 
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="camp[location]" value="<%= camp.location %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="camp[image]" value="<%= camp.image %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" name="camp[price]" value="<%= camp.price %>" aria-label="Amount (to the nearest dollar)" aria-describedby="price-label" required>
                    <span class="input-group-text">.00</span>
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" name="camp[description]" required><%= camp.description %></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Save</button>
            </div>
        </form>
        <a href="/campgrounds/<%= camp._id %>">Cancel</a>
    </div>
</div>